package unl.edu.ec;

import java.util.Scanner;

public class Fraccion {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.println("\nFracción #1: " );
        System.out.println("Ingrese numerador: ");
        int numerador1 = sc.nextInt();
        System.out.println("Ingrese denominador:");
        int denominador1 = sc.nextInt();
        if (denominador1 == 0) {
            System.out.println("El denominador no puede ser 0. Finalizar el programa.");
            return;
        }

        System.out.println("\nFracción #2: " );
        System.out.println("Ingrese numerador: ");
        int numerador2 = sc.nextInt();
        System.out.println("Ingrese denominador: ");
        int denominador2 = sc.nextInt();
        if (denominador2 == 0) {
            System.out.println("El denominador no puede ser 0. Finalizar el programa.");
            return;
        }

        System.out.println("\nFracciones ingresadas:");
        System.out.println("Fracción 1 = " + numerador1 + "/" + denominador1);
        System.out.println("Fracción 2 = " + numerador2 + "/" + denominador2);

        System.out.println("\nValores decimales de las fracciones: ");
        System.out.println("Fracción 1 = " + (double) numerador1 / denominador1);
        System.out.println("Fracción 2 = " + (double) numerador2 / denominador2);

        System.out.println("\nOperaciones fraccionarias:");
        System.out.println("Suma de fracciones: ");
        System.out.println("Fracción 1 + Fracción 2 = " + (numerador1 * denominador2 + numerador2 * denominador1) + "/" + (denominador1 * denominador2));
        System.out.println("\nResta de fracciones: ");
        System.out.println("Fracción 1 - Fracción 2 = " + (numerador1 * denominador2 - numerador2 * denominador1) + "/" + (denominador1 * denominador2));
        System.out.println("\nMultiplicación de fracciones: ");
        System.out.println("Fracción 1 x Fracción 2 = " + (numerador1 * numerador2) + "/" + (denominador1 * denominador2));
        System.out.println("\nDivisión de fracciones: ");
        System.out.println("Fracción 1 / Fracción 2 = " + (numerador1 * denominador2) + "/" + (denominador1 * numerador2));

        if (numerador1 != 0) {
            int temp = numerador1;
            numerador1 = denominador1;
            denominador1 = temp;
            System.out.println("\nFracción 1 invertida: " + numerador1 + "/" + denominador1);
        } else {
            System.out.println("\nNo se puede invertir la fracción porque su numerador es 0.");
        }

        if (numerador2 != 0) {
            System.out.println("Inversa de Fracción 2: " + denominador2 + "/" + numerador2);
        } else {
            System.out.println("No se puede invertir la fracción porque su numerador es 0.");
        }

        int num1 = numerador1;
        int den1 = denominador1;
        while (den1 != 0) {
            int temp = den1;
            den1 = num1 % den1;
            num1 = temp;
        }
        int mcd1 = num1;
        int numeradorSimplificado1 = numerador1 / mcd1;
        int denominadorSimplificado1 = denominador1 / mcd1;

        int num2 = numerador2;
        int den2 = denominador2;
        while (den2 != 0) {
            int temp = den2;
            den2 = num2 % den2;
            num2 = temp;
        }
        int mcd2 = num2;
        int numeradorSimplificado2 = numerador2 / mcd2;
        int denominadorSimplificado2 = denominador2 / mcd2;

        System.out.println("\nFracciones simplificadas:");
        System.out.println("Fracción 1 simplificada = " + numeradorSimplificado1 + "/" + denominadorSimplificado1);
        System.out.println("Fracción 2 simplificada = " + numeradorSimplificado2 + "/" + denominadorSimplificado2);
        sc.close();
    }
}
